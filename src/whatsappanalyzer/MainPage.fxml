<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="whatsappanalyzer.MainPageController">
   <children>
      <VBox alignment="CENTER" layoutX="2.0" layoutY="19.0" prefHeight="150.0" prefWidth="396.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER" layoutX="25.0" layoutY="39.0" spacing="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Directory :" />
                  <TextField fx:id="txtFilePath" editable="false" prefHeight="31.0" prefWidth="280.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="File Name:" />
                  <TextField fx:id="txtFileName" editable="false" prefHeight="31.0" prefWidth="280.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="60.0">
               <children>
                  <Button fx:id="btnChooseFile" mnemonicParsing="false" onAction="#chooseFileAction" text="Choose File" />
                  <Button fx:id="btnAnalyze" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#analyzeAction" text="Analyze" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
